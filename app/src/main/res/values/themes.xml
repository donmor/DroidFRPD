<resources>
    <!-- Base application theme. -->
    <style name="Theme.DroidFRPD" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_m</item>
        <item name="colorPrimaryVariant">@color/color_d</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_m</item>
        <item name="colorSecondaryVariant">@color/color_d</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DroidFRPD.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DroidFRPD.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DroidFRPD.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>